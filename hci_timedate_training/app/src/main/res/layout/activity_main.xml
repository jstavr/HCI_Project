<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/instructions" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START ANDROID"
        android:id="@+id/start_android"
        android:layout_alignTop="@+id/start_ios"
        android:layout_toRightOf="@+id/start_ios"
        android:layout_toEndOf="@+id/start_ios" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START IOS"
        android:id="@+id/start_ios"
        android:layout_alignTop="@+id/start_new"
        android:layout_toRightOf="@+id/start_new"
        android:layout_toEndOf="@+id/start_new" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START NEW"
        android:id="@+id/start_new"
        android:layout_below="@+id/our_start"
        android:layout_toLeftOf="@+id/lefthanded"
        android:layout_toStartOf="@+id/lefthanded"
        android:layout_marginTop="34dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready for Participant"
        android:id="@+id/our_start"
        android:layout_below="@+id/lefthanded"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Handed"
        android:id="@+id/lefthanded"
        android:checked="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
